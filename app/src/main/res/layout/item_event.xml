<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Background Layer (Revealed on Swipe) -->
    <FrameLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="@color/coral"
        android:paddingEnd="24dp"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:src="@android:drawable/ic_menu_delete"
            app:tint="@android:color/white"
            android:contentDescription="Delete" />
    </FrameLayout>

    <!-- Foreground Layer (Visible Item) -->
    <LinearLayout
        android:id="@+id/view_foreground"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:layout_margin="8dp"
        android:elevation="4dp"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToOutline="true">

        <ImageView
            android:id="@+id/eventImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:contentDescription="Event Image"/>

        <TextView
            android:id="@+id/eventName"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/eventVenue"
                android:textColor="#757575"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/eventStatus"
                android:textColor="#009688"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Interested"/>
            <TextView
                android:id="@+id/eventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#009688"
                android:textStyle="italic"
            />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
        >
            <ImageButton
                android:id="@+id/btnInterested"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_star_border"
                android:contentDescription="Mark Interested"/>

            <ImageButton
                android:id="@+id/btnGoing"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_check_circle_outline"
                android:contentDescription="Mark Going"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
