<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Main Theme linking to Base -->
    <style name="Theme.Backstage_group_12" parent="Base.Theme.Backstage_group_12" />

    <!-- Base application theme. -->
    <style name="Base.Theme.Backstage_group_12" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!--        <item name="colorPrimaryContainer">@color/sunset_gold</item>-->
        <!--        <item name="colorOnPrimaryContainer">@color/tropical_teal</item>-->




        <!-- Secondary -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorOnSecondaryContainer">@color/sunset_gold</item>
        <item name="colorSecondaryContainer">@color/tropical_teal</item>



        <!-- Tertiary -->
        <item name="colorTertiary">@color/colorTertiary</item>
        <!--        <item name="colorTertiaryVariant">@color/colorTertiaryVariant</item>-->
        <item name="colorOnTertiary">@color/colorOnTertiary</item>

        <!-- Background + Surface -->
        <item name="android:windowBackground">@color/colorBackground</item>
        <!--        <item name="colorBackground">@color/colorBackground</item>-->
        <item name="colorOnBackground">@color/dark_blue</item>

        <item name="colorSurface">@color/deep_sea_blue</item>
        <item name="colorSurfaceVariant">@color/sunset_gold</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>


        <!-- Error -->
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>

        <!-- Outline + Ripple -->
        <item name="colorOutline">@color/colorOutline</item>
        <item name="colorControlHighlight">@color/colorRipple</item>

        <!-- Status bar + Navigation bar -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <!--        <item name="android:statusBarContrastEnforced">false</item>-->
        <!--        <item name="android:navigationBarContrastEnforced">false</item>-->

        <!-- Typography (optional) -->
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textColorSecondary">@color/deep_sea_blue</item>

    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.Backstage.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Just color, no logo drawable for the system window background -->
        <item name="android:windowBackground">@color/deep_sea_blue</item>
        <item name="android:statusBarColor">@color/deep_sea_blue</item>
    </style>

    <!-- Custom DatePicker Theme -->
    <style name="Theme.Backstage.DatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarHeaderLayout">@style/Widget.MaterialComponents.MaterialCalendar.HeaderLayout</item>

        <!-- Colors -->
        <item name="colorPrimary">@color/tropical_teal</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSurface">@color/deep_sea_blue</item>
        <item name="colorOnSurface">@android:color/white</item>
        
    </style>

    <style name="App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/App.MaterialAlertDialog.Title</item>
    </style>

    <style name="App.MaterialAlertDialog.Title" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/deep_sea_blue</item>
    </style>

</resources>
